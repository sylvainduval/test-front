{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

<div>
    <h1>Ajouter un article</h1>

    {% if error is not empty %}
    <p>{{ error }}</p>
    {% endif %}

    <form name="createArticle" action="creer" method="POST">
        <table>
            <tbody>
                <tr>
                    <td>Titre</td>
                    <td><input type="text" name="title" value="{{ title }}"></td>
                </tr>
                <tr>
                    <td>Accroche</td>
                    <td><textarea name="leading" value="{{ leading }}"></textarea></td>
                </tr>
                <tr>
                    <td>Corps</td>
                    <td><textarea name="body">{{ body }}</textarea></td>
                </tr>
                <tr>
                    <td>Votre nom</td>
                    <td><input type="text" name="createdBy">{{ createdBy }}</td>
                </tr>
            </tbody>

        </table>
        <input type="submit" value="Soumettre">
    </form>

    <hr>
    <a href=".">Retour Ã  la liste</a>
</div>
{% endblock %}
